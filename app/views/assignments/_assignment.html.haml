.assignment-container
  .float-right
    = link_to edit_assignment_path(assignment), class: 'btn btn-outline-info' do
      %i.fa.fa-pencil
    = link_to assignment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' do
      %i.fa.fa-times
  %h2= assignment.title
  %p= l assignment.due_to
  %p= assignment.description
  = assignment.discipline_name
